@model RegistrationViewModel
@{
    Layout = "_LayoutAccount";
}

<form action="/Client/Client" method="post">
   
    <div class="container">

        <h1 class="intro-titel">Мы открываем новые миры</h1>
        <h2 class="intro-suptitel">Ты готов с нами?</h2>
        <a class="button-login" href="#"> Login</a>

        <div class="login-block">
            <div>
                password: @Html.TextBoxFor(x => x.Password)
                @Html.ValidationMessageFor(x => x.Password)

                login: @Html.TextBoxFor(x => x.Login)
                @Html.ValidationMessageFor(x => x.Login)
                <input class="login" type="submit" value="Войти" />
            </div>
        </div>
    </div>

</form>