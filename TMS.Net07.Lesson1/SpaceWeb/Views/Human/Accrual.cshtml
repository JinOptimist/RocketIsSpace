@using SpaceWeb.Models.Human
@model AccrualViewModel

<form action="/Human/AccrualSalary" method="post">
    @Html.HiddenFor(x => x.IdEmploye)
    <div class="form-group">
        @Html.TextBoxFor(x => x.Date, new { @type="month" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.Amount)
    </div>
    <input type="submit"/>
</form>