@model BankAccountViewModel

@{
    Layout = "_LayoutBank";
}

@section Scripts{ 
    <script src="~/js/bank/account.js"></script>
}

<div class="client-before-content"></div>

<div class="container-accounts">
    <div class="menu left">
        <div class="left-menu-text">СЧЕТА</div>
        @Html.Partial("_bankAccountsList")
    </div>
    <div class="account-info-container">
        <div class="account-info">
            <div class="info">@Model.Type</div>
            <div class="info">
                <span class='amount'>@Model.Amount</span>
                @Model.Currency.ToString()
            </div>
            <div class="info accountNumber">@Model.AccountNumber</div>
            <div class="info">Создан: @Model.CreationDate.Month/@Model.CreationDate.Year</div>
            <div class="info">Действителен до: @Model.ExpireDate.Month/@Model.ExpireDate.Year</div>
        </div>
        <div class="button-list">
            <div class="button plus-money">Пополнить счет</div>
            <div class="button minus-money">Снять со счета</div>
            <div class="button">Заморозить счета</div>
            <a href="/Account/DownloadLog?id=@Model.Id">
                <div class="button">История операций</div>
            </a>
            <div class="button">Перевод со счета</div>
            <a href="/Account/Remove?id=@Model.Id">
                <div class="button">Удалить счет</div>
            </a>
        </div>
    </div>
</div>