@section Scripts{
    <script src="~/js/chart.min.js"></script>
    <script src="~/js/index.js"></script>
}
@{
    var cardOptions = new List<SelectListItem>();

    var cars = Enum.GetValues(typeof(EnumBankCard));

    for (int i = 0; i < cars.Length; i++)
    {
        var option = new SelectListItem();
        option.Value = ((int)cars.GetValue(i)).ToString();
        option.Text = cars.GetValue(i).ToString();
        cardOptions.Add(option);
    }
}
@model BanksCardViewModel


<form class="creation-form" method="POST">
    <div>Название карты</div>
    <p>
        @Html.DropDownList("enumBankCard", cardOptions)
    </p>
    <div>Начальная сумма</div>
    <input type="text" autocomplete="off" name="@nameof(BanksCardViewModel.BankAccount))">
    <p class="buttons">
        <input class="create-account button" type="submit" value="Создать">
        <input class="cancel-creation button" type="reset" value="Сброс">
    </p>
</form>

<div class="block">
    <canvas id="myChart"></canvas>
</div>

<div class="currency-exchanger">
    @Model.CurrencyExchengerViewModel.CurrencyFromDrop @Model.CurrencyExchengerViewModel.CurrencyToDrop

</div>

