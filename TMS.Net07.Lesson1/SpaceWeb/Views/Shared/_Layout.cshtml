<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/icon.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</head>
<body>
    <div class="popup">
        <div class="cover"></div>
        <div class="popup-content">Ты согласен?</div>
    </div>
    <div class="header">
        <div></div>
        <span class="header-text">Ракеты для каждого</span>
        <div class="login-block">
            <div>
                <input class="user-login" type="text" placeholder="login" />
            </div>
            <div>
                <input type="text" placeholder="password" />
                <input class="login" type="button" value="Войти" />
            </div>
        </div>
    </div>
    <div class="center-block">
        <div class="left-menu">
            <div class="left-menu-absolute">
                <div class="link icon home">
                    <a href="/Home/Index">
                        <span class="text">Home</span>
                    </a>
                </div>
                <div class="link icon account">
                    <a href="/User/Profile">
                        <span class="text">Profile</span>
                    </a>
                </div>
                <div class="link icon help">
                    <span class="text">Help</span>
                </div>
                <div>
                    <div>
                        <label>
                            <input type="radio"
                                   name="visible-remove"
                                   value="1"
                                   checked="checked" />
                            Вкл
                        </label>
                    </div>
                    <div>
                        <label>
                            <input type="radio" name="visible-remove" value="0" />
                            Выкл
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            @RenderBody()
            
        </div>
    </div>

    <div class="hide">
        <div class="rocket template">
            <div class="name">
                <div class="view">
                    <span class="current-name">***</span>
                    <span class="icon close"></span>
                </div>
                <div class="edit hide">
                    <input class="new-name" />
                    <span class="icon ok">OK</span>
                </div>
            </div>
            <div class="image-container">
                <img src="***" />
            </div>
        </div>
    </div>
</body>
</html>