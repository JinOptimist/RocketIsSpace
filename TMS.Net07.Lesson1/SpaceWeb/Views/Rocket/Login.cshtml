@model SpaceWeb.Models.RocketModels.RocketLoginViewModel
@{
    Layout = "_LayoutRocket";
}
@section Style
{
    <link rel="stylesheet" href="~/css/Rocket/Login.css?v=3">
}


<div class="loginpage">
    <div class="pglogblock">
        <div class="pginfo">
            <div class="pglogin">Login</div>
        </div>
        <form action="/Rocket/Login" method="post" class="loginformstyle1">
            <ul class="noBullet">
                <li>
                    <label for="username"></label>
                    <input name="UserName" class="inputFields" type="text" placeholder="Login" />
                </li>
                <li>
                    <label for="password"></label>
                    <input name="Password" class="inputFields" type="text" placeholder="Password" />
                </li>
                <li>
                    <input class="pglogbut" type="submit" value="Log in" />
                </li>
            </ul>
        </form>
    </div>
</div>
