}

<div class="registration">
    <div class="registr">Registration</div>
    <div class="none"></div>
    <form action="Registration" method="post">
        <div class="reg-field">
            <div class="first-text">
                <div style="margin-top: 45px">Name:</div>
                <div style="margin-top: 49px">Date of birth:</div>
                <div style="margin-top: 49px">Username:</div>
                <div style="margin-top: 49px">Password:</div>
            </div>

            <div class="first-field">
                <div style="margin-top: 40px">@Html.TextBoxFor(model => model.Name)</div>
                <div style="margin-top: 40px">@Html.TextBoxFor(model => model.DateOfBirth, "{0:MM\\/dd\\/yyyy}")</div>
                <div style="margin-top: 40px">@Html.TextBoxFor(model => model.UserName)</div>
                <div style="margin-top: 40px">@Html.TextBoxFor(model => model.Password)</div>
            </div>

            <div class="first-text second-text">
                <div style="margin-top: 45px">Last name:</div>
                <div style="margin-top: 123px">Email:</div>
            </div>

            <div class="second-field">
                <div style="margin-top: 40px">@Html.TextBoxFor(model => model.LastName)</div>
                <div style="margin-top: 114px">@Html.TextBoxFor(model => model.Email)</div>
            </div>
        </div>
        <div>
            <input class="sub" type="submit" value="Send" />
        </div>

