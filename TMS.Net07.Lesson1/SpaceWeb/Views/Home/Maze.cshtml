@using SpaceWeb.Models.Maze
@using MazeCore.Cells

@model MazeViewModel
<div class="maze">
    <div>
        Legend
        <div>
            wall <span class="icon wall"></span>
        </div>
        <div>
            road <span class="icon road"></span>
        </div>
    </div>
   <div>
       @for (int y = 0; y < Model.Height; y++)
       {
           <div class="line">
               @for (int x = 0; x < Model.Width; x++)
               {
                    <span class="icon @(Model.Cells[y, x] == CellType.Wall ? "wall" : "road" )"></span>
               }
           </div>
       }
   </div>
</div>
